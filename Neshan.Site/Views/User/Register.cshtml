@model Neshan.Domain.DTOs.User.UserDTO
@using Library.Core.Enums;
@{
    ViewData["Title"] = "ثبت نام";
    string errorMessage = string.Empty;
}


<div class="mt-3">
    <h1 class="display-4">ثبت نام</h1>

    <div class="container">
        <div class="row">
            <form asp-controller="User" asp-action="register" method="post">
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت نام" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="row">
            <div class="container">
                @if (ViewBag.SharedResult != null)
                {
                    switch (ViewBag.SharedResult)
                    {
                        case SharedEnums.SharedResult.UserExist:
                            errorMessage = "این نام کاربری قبلا ثبت نام  شده است"; //can read from Localization
                            break;

                        case SharedEnums.SharedResult.UnSuccessful:
                            errorMessage = "خطایی در سرور به وجود امد با پشتیبانی تماس بگیرید";
                            break;
                    }

                    if (ViewBag.SharedResult != SharedEnums.SharedResult.Successful)
                    {
                        <p class="alert alert-warning">@errorMessage</p>                        
                    }
                    else
                    {
                        <p class="alert alert-success">ثیت نام شما با موفقیت انجام شد <a asp-action="login" asp-controller="user">ورود به سایت</a> </p>
                    }
                }
            </div>
        </div>
    </div>
</div>
